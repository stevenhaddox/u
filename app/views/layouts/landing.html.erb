<head>
  <meta charset="utf-8" />
  <title>
    Meta:
    <%= title = (yield :title); title.blank? ? "" : title %>
  </title>
  <!-- Set the viewport width to device width for mobile -->
  <meta content="width=device-width" name="viewport" />
  <meta content="Eliza Brock and Luke Flener, RailsThemes.com" name="designer" />
  <link href="/assets/favicon.ico" rel="shortcut icon" type="image/x-icon" />
  <link href="/assets/apple-touch-icon.png" rel="apple-touch-icon" />
  <link href="/assets/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72" />
  <link href="/assets/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114" />
  <meta content="width=device-width, initial-scale=1, maximum-scale=1" name="viewport" />
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield :head %>
</head>
<body>
  <div id="main">
    <%= render 'layouts/header' %>

    <div id="contents" class="container">
      <% if content_for? :sidebar %>
        <div id="sidebar" class="four columns">
          <%= yield :sidebar %>
        </div>
        <div id="sidebar_content" class="twelve columns">
          <div class="row">
            <div class="twelve columns">
              <%= render 'layouts/flash', :flash => flash %>
            </div>
          </div>
          <%= yield %>
        </div>
      <% else %>
        <%= render 'layouts/flash', :flash => flash %>
        <%= yield %>
      <% end %>
    </div>
    <div id="footer-spacer">
    </div>
  </div>
  <%= render 'layouts/footer' %>
</html>
