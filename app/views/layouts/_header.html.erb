<div id="header">
  <div class="container">
    <div id="logo" class="one-third column">
      <h1 class="logo">
        <a href="/">'u'RL Shortener</a>
      </h1>
    </div>
    <div class="two-thirds column">
      <ul class="navigation">
        <li>
          <%= link_to('Shorten Your Link!', new_link_path) %>
        </li>
        <li>
          <%= link_to('Recent Links', links_path) %>
        </li>
      </ul>
    </div>
  </div>
</div>
<div id="titlebar">
  <div class="container">
    <div class="row">
      <% if content_for? :page_title %>
        <h1 class="title"><%= yield :page_title %>
      </h1>
      <% end %>
      <%= yield :titlebar %>
    </div>
  </div>
</div>
